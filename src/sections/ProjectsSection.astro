---
import ProjectCard from "@components/ProjectCard.astro"
import ucaFrontPage from "@images/UCA_app_web.png"
import personalFinanceFrontPage from "@images/personal_finance_web.png"
import weatherWebAppFrontPage from "@images/weather_web_app.png"

import type { Project } from "@interfaces/interfaces.ts"

const projects: Project[] = [
    {
        img: ucaFrontPage,
        name: "Aplicacion Web",
        description: "Una aplicación web para la Universidad Católica 'Nuestra Señora de la Asunción'. Estuve a cargo del desarrollo del Backend con Laravel y MySQL, realice los CRUDs pertinentes para cada sección, implemente un sistema de cambio de contraseña mediante emails. También contribuí en el Frontend con diseños de Bootstrap.",
        technologies: ["Laravel", "Bootstrap", "MySQL"],
        href: "https://www.upsanignacio.edu.py/",
        gitHub: "#"
    },
    {
        img: personalFinanceFrontPage,
        name: "Aplicacion Web",
        description: "Una aplicacion web para control de ingresos y egresos personales. Cuenta con integracion de graficos para el seguimiento de las finanzas personales. Todos los datos de guardan en el localStorage.",
        technologies: ["Vue.js", "Typescript", "Tailwindcss"],
        href: "https://personal-finance-beta.vercel.app/",
        gitHub: "https://github.com/Barboza13/personal-finance"
    },
    {
        img: weatherWebAppFrontPage,
        name: "Aplicacion Web",
        description: 'Una aplicacion web para mostrar el estado del clima en diferentes partes del mundo. Consumo y procesamiento de los datos de la API "Visual Crossing Weather API".',
        technologies: ["Vue.js", "Typescript", "Tailwindcss"],
        href: "https://weather-web-app-delta-five.vercel.app/",
        gitHub: "https://github.com/Barboza13/weather-web-app"
    },
]
---

<section
    class="flex flex-col justify-start items-center lg:h-[800px] border-b-[1px] border-white dark:border-gray-600"
    id="projects"
>
    <h1 class="text-3xl text-white my-5">Proyectos</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 h-full w-full place-content-center gap-4 px-11 pb-5 lg:px-32">
        { projects.map((project) => (<ProjectCard project={project} />)) }
    </div>
</section>