---
import Layout from "@layouts/Layout.astro"

import PresentationSection from "@sections/PresentationSection.astro"
import ProjectsSection from "@sections/ProjectsSection.astro"
import TechnologiesSection from "@sections/TechnologiesSection.astro"
---

<Layout title="Portfolio">
	<PresentationSection />
	<ProjectsSection />
	<TechnologiesSection />
</Layout>

<script>
	import { observeCards, mouseTracker } from "@animations/animations.ts"
	import updateFavicon from "@utils/updateFavicon.ts"

	observeCards()
	mouseTracker()
	
	window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', updateFavicon)
</script>