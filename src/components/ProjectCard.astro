---
import { Icon } from "astro-icon/components"

import type { Project } from "@interfaces/interfaces.ts"

interface Props {
    project: Project
}

const { project } = Astro.props
---

<div
    class="card flex flex-col justify-between items-start bg-blue-900 text-white rounded-md h-[460px] min-h-[460px] w-[324px] border border-blue-700 overflow-hidden z-[100] shadow-xl hover:shadow-black/45 hover:-translate-y-5 opacity-0 translate-y-20 duration-[.5s] transition-all ease-out"
>
    <img src={project.img.src} alt="Portada del proyecto.">
    <div class="flex flex-col justify-start items-center h-full gap-2 mt-2">
        <h1>{project.name}</h1>
        <p class="flex flex-wrap items-start w-full gap-2">
            { project.technologies.map((technology) => (
                <span class="bg-blue-500 text-sm rounded-full mx-1 px-3">
                    {technology}
                </span>
            )) }
        </p>
        <p class="w-full text-[15px] px-4">{project.description}</p>
    </div>
    <div class="flex justify-end items-center w-full px-2 mb-2">
        {  project.gitHub !== "#" && (
            <a
                class="flex justify-evenly items-center w-40 h-9 bg-black hover:translate-x-1 hover:-translate-y-1  custom-shadow rounded-full mr-2"
                type="button"
                target="_blank"
                href={project.gitHub}
            >
                Ver c√≥digo
                <Icon name="github" size={20} />
            </a>
        ) }
        <a
            class="flex justify-evenly items-center w-40 h-9 bg-gray-600 hover:translate-x-1 hover:-translate-y-1 custom-shadow rounded-full"
            type="button"
            target="_blank"
            href={project.href}
        >
            Ver proyecto
            <Icon name="arrow-right" size={20} />
        </a>
    </div>
</div>

<style>
    .custom-shadow {
        @apply shadow-lg;
        box-shadow: none;
        transition: all .3s ease;
    }
    
    .custom-shadow:hover {
        box-shadow: -3px 3px;
    }
</style>